package com.helloworld.game;

import com.badlogic.gdx.math.Rectangle;

public class Bucket {
	private float xVelocity, yVelocity;
	private Rectangle box;
	public Bucket(){
		xVelocity = 0;
		yVelocity = 0;
		box = new Rectangle();
		box.x = 800 / 2 - 64 / 2;
		box.y = 20;
		box.width = 64;
		box.height = 64;
	}
	public int getXVelocity(){
		return xVelocity;
	}
	public void changeXVelocity(float velocity){
		xVelocity += velocity;
		if (xVelocity > 200) xVelocity = 200;
		if (xVelocity < -200) xVelocity = -200;
	}
	public void setXVelocity(float velocity){
		xVelocity += velocity;
		if (xVelocity > 200) xVelocity = 200;
		if (xVelocity < -200) xVelocity = -200;
	}
	public int getYVelocity(){
		return yVelocity;
	}
	public void changeYVelocity(int velChange){
		yVelocity += velChange;
		if (yVelocity > 200) yVelocity = 200;
		if (yVelocity < -200) yVelocity = -200;
	}
	public void setYVelocity(int velocity){
		yVelocity += velocity;
		if (yVelocity > 200) yVelocity = 200;
		if (yVelocity < -200) yVelocity = -200;
	}
	public float getX(){
		return box.x;
	}
	public float getY(){
		return box.y;
	}
	public void setX(float setVal){
		box.x = setVal;
	}
	public void setY(float setVal){
		box.y = setVal;
	}
}
