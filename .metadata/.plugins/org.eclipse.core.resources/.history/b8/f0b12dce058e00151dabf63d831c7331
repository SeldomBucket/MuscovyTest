package com.helloworld.game;

import com.badlogic.gdx.math.Rectangle;

public class Bucket {
	private int xVelocity, yVelocity;
	public Rectangle box;
	
	public Bucket(){
		xVelocity = 0;
		yVelocity = 0;
		box = new Rectangle();
		box.x = 800 / 2 - 64 / 2;
		box.y = 20;
		box.width = 64;
		box.height = 64;
	}
	public int getXVelocity(){
		return xVelocity;
	}
	public void changeXVelocity(int velChange){
		xVelocity += velChange;
	}
	public void setXVelocity(int velocity){
		xVelocity += velocity;
	}
	public int getYVelocity(){
		return yVelocity;
	}
	public void changeYVelocity(int velChange){
		yVelocity += velChange;
	}
	public void setYVelocity(int velocity){
		yVelocity += velocity;
	}
}
